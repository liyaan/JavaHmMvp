<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:height="59vp"
        ohos:width="match_parent"
        ohos:background_element="#009688"
        ohos:left_padding="20vp"
        ohos:text="$string:app_name"
        ohos:visibility="hide"
        ohos:text_color="$color:white"
        ohos:text_size="18vp"
        ohos:text_weight="500"/>

    <DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent">


        <com.example.utils.component.sticky.StickyScrollView
            ohos:id="$+id:scrollView"
            ohos:height="match_parent"
            ohos:width="match_parent">


            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical">

                <Image
                    ohos:id="$+id:main_shoe_picture"
                    ohos:height="420vp"
                    ohos:width="match_parent"
                    ohos:image_src="$media:nike"/>

                <Text
                    ohos:height="120vp"
                    ohos:width="match_parent"
                    ohos:background_element="#aaaaaa"
                    ohos:text_alignment="center"
                    ohos:text_color="#ff0000"
                    ohos:text_size="12vp"/>


                <DirectionalLayout
                    ohos:id="$+id:title"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="#ffffff"
                    ohos:orientation="vertical"
                    ohos:padding="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="Product Title"
                        ohos:text_font="bold"
                        ohos:text_size="15vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:italic="true"
                        ohos:text="Product Description goes here"
                        ohos:text_size="15vp"/>
                </DirectionalLayout>

                <Component
                    ohos:height="0.1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#aaaaaa"/>

                <DirectionalLayout
                    ohos:id="$+id:other_product"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:background_element="#80CBC4"
                    ohos:clickable="true"
                    ohos:orientation="vertical"
                    ohos:padding="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="Check other product"
                        ohos:text_size="15vp"
                        ohos:text_weight="500"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:italic="true"
                        ohos:text="Other product info goes here"
                        ohos:text_size="15vp"/>
                </DirectionalLayout>

                <Component
                    ohos:height="0.1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#aaaaaa"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="vertical"
                    ohos:padding="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="Product Similar"
                        ohos:text_size="15vp"
                        ohos:text_weight="500"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:italic="true"
                        ohos:text="Similar goes here"
                        ohos:text_size="15vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:id="$+id:buttons"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:id="$+id:save"
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:background_element="#535766"
                        ohos:element_left="$media:ic_wishlist"
                        ohos:layout_alignment="center"
                        ohos:padding="15vp"
                        ohos:text="SAVE"
                        ohos:text_alignment="center"
                        ohos:text_color="#ffffff"
                        ohos:text_size="14vp"
                        ohos:weight="1"/>

                    <Text
                        ohos:id="$+id:buy"
                        ohos:height="match_parent"
                        ohos:width="match_parent"
                        ohos:background_element="#0BC6A0"
                        ohos:element_left="$media:ic_bag"
                        ohos:layout_alignment="center"
                        ohos:max_text_lines="1"
                        ohos:text="BUY"
                        ohos:text_alignment="center"
                        ohos:text_color="#ffffff"
                        ohos:text_size="14vp"
                        ohos:weight="1"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="vertical"
                    ohos:padding="15vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="Other product related info goes here!"
                        ohos:text_size="15vp"
                        ohos:text_weight="500"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:italic="true"
                        ohos:text="You can add more data here"
                        ohos:text_size="15vp"/>
                </DirectionalLayout>

                <Component
                    ohos:height="0.1vp"
                    ohos:width="match_parent"
                    ohos:background_element="#aaaaaa"/>

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:padding="15vp"
                    ohos:text="More colors"
                    ohos:text_size="15vp"
                    ohos:text_weight="500"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal">

                    <Image
                        ohos:height="220vp"
                        ohos:width="0vp"
                        ohos:image_src="$media:similar_1"
                        ohos:weight="1"/>

                    <Image
                        ohos:height="620vp"
                        ohos:width="0vp"
                        ohos:image_src="$media:similar_2"
                        ohos:weight="1"/>
                </DirectionalLayout>
            </DirectionalLayout>
        </com.example.utils.component.sticky.StickyScrollView>

        <DirectionalLayout
            ohos:id="$+id:title2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#ffffff"
            ohos:orientation="vertical"
            ohos:padding="15vp"
            ohos:visibility="hide">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Product Title"
                ohos:text_font="bold"
                ohos:text_size="15vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:italic="true"
                ohos:text="Product Description goes here"
                ohos:text_size="15vp"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:buttons2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_bottom="true"
            ohos:bottom_padding="10vp"
            ohos:orientation="horizontal"
            ohos:visibility="hide">

            <Text
                ohos:id="$+id:save2"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:background_element="#535766"
                ohos:element_left="$media:ic_wishlist"
                ohos:layout_alignment="center"
                ohos:padding="15vp"
                ohos:text="SAVE"
                ohos:text_alignment="center"
                ohos:text_color="#ffffff"
                ohos:text_size="14vp"
                ohos:weight="1"/>

            <Text
                ohos:id="$+id:buy2"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:background_element="#0BC6A0"
                ohos:element_left="$media:ic_bag"
                ohos:layout_alignment="center"
                ohos:max_text_lines="1"
                ohos:text="BUY"
                ohos:text_alignment="center"
                ohos:text_color="#ffffff"
                ohos:text_size="14vp"
                ohos:weight="1"/>
        </DirectionalLayout>
    </DependentLayout>
</DirectionalLayout>

