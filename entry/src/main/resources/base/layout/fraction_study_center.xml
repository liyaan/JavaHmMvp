<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.ohos.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="#f7f7f7"
    ohos:orientation="horizontal">
    <ListContainer
        ohos:id="$+id:listContainer"
        ohos:height="match_parent"
        ohos:width="0dip"
        ohos:weight="1"
        ohos:orientation="vertical"
        />
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="0dip"
        ohos:weight="2"
        ohos:left_margin="5vp"
        ohos:orientation="vertical">
        <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_size="20fp"
            ohos:text_weight="500"
            ohos:padding="5vp"
            ohos:text_color="$color:black"
            ohos:background_element="$color:white"
            ohos:id="$+id:listChildContainerTv"></Text>
        <ListContainer
            ohos:id="$+id:listChildContainer"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:top_margin="5vp"
            ohos:orientation="vertical"
            />
    </DirectionalLayout>
    <com.yan.zrefreshview.ZRefreshView
        ohos:id="$+id:zrefresh_view"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        app:AutoLoadMore="true"
        app:EnableLoadMore="true"
        ohos:visibility="hide"
        app:EnableRefresh="true"
        app:RefreshBgColor="#ffffff"
        app:RefreshTextColor="#000000"
        >

    </com.yan.zrefreshview.ZRefreshView>
</DirectionalLayout>