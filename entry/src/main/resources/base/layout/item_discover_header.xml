<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:margin="8vp"
    ohos:padding="8vp"
    ohos:background_element="$graphic:background_white_radius">

    <Text
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:text_weight="400"
        ohos:text_color="$color:black"
        ohos:multiple_lines="true"
        ohos:max_text_lines="2"
        ohos:id="$+id:discover_page_title"/>
    <Text
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:text_weight="300"
        ohos:top_margin="10vp"
        ohos:text_color="$color:color_main_gray"
        ohos:id="$+id:discover_niceDate"/>
</DirectionalLayout>