<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:alignment="center"
    ohos:orientation="horizontal"
    ohos:padding="5vp"
    xmlns:ohos="http://schemas.huawei.com/res/ohos">

    <Image
        ohos:width="30vp"
        ohos:height="30vp"
        ohos:image_src="$media:icon"/>

    <Text
        ohos:id="$+id:picker_title"
        ohos:width="0"
        ohos:height="40vp"
        ohos:weight="1"
        ohos:text_alignment="center"
        ohos:text_size="18fp"
        ohos:text="New Text"/>

    <Image
        ohos:id="$+id:picker_close"
        ohos:width="30vp"
        ohos:height="30vp"
        ohos:image_src="$media:ic_menu_close_clear_cancel"/>

</DirectionalLayout>