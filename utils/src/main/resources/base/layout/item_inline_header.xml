<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:header_text"
            ohos:height="70vp"
            ohos:width="64vp"
            ohos:background_element="$color:color_header_bg"
            ohos:text="0"
            ohos:text_alignment="center"
            ohos:text_color="$color:color_white"
            ohos:text_font="bold"
            ohos:text_size="$float:headerNumSize"
            ohos:visibility="visible" />

        <Text
            ohos:id="$+id:item_text"
            ohos:height="70vp"
            ohos:width="match_content"
            ohos:start_margin="35vp"
            ohos:text="Sample text"
            ohos:text_alignment="vertical_center"
            ohos:text_font="bold"
            ohos:text_size="$float:itemTextSize"
            ohos:visibility="visible" />
    </DirectionalLayout>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:right_margin="5vp"
        ohos:background_element="$color:color_black" />

</DirectionalLayout>