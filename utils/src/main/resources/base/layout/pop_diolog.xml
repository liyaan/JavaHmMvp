<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:mDirectionalLayout"
    ohos:height="match_parent"
    ohos:width="match_parent"

    >

    <DependentLayout
        ohos:height="200vp"
        ohos:width="150vp"
        ohos:top_margin="50vp"
        ohos:align_parent_right="true"
        ohos:right_margin="20vp"
        ohos:background_element="$color:gray"
        >
    <Button
        ohos:id="$+id:action_empty"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="   Empty"
        ohos:align_parent_right="true"
        ohos:text_color="#000000"
        ohos:text_size="19fp"
        ohos:top_margin="0vp"
        ohos:top_padding="8vp"/>

    <Button
        ohos:id="$+id:action_loading"
        ohos:height="50vp"
        ohos:width="200vp"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="   Loading"
        ohos:align_parent_right="true"
        ohos:text_color="#000000"
        ohos:text_size="19fp"
        ohos:top_margin="50vp"
        ohos:top_padding="8vp"/>

    <Button
        ohos:id="$+id:action_error"
        ohos:height="50vp"
        ohos:width="200vp"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:background_element="#00000000"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="   Error"
        ohos:align_parent_right="true"
        ohos:text_color="#000000"
        ohos:text_size="19fp"
        ohos:top_margin="100vp"
        ohos:top_padding="8vp"/>
    <Button
        ohos:id="$+id:action_content"
        ohos:height="50vp"
        ohos:width="200vp"
        ohos:text_alignment="left"
        ohos:align_parent_top="true"
        ohos:background_element="#00000000"
        ohos:bottom_padding="8vp"
        ohos:center_in_parent="true"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="   Content"
        ohos:align_parent_right="true"
        ohos:text_color="#000000"
        ohos:text_size="19fp"
        ohos:top_margin="150vp"
        ohos:top_padding="8vp"/>
    </DependentLayout>
</DependentLayout>